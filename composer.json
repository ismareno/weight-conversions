{
    "name": "ismareno/weight-conversions",
    "description": "This is my package weight-conversions",
    "keywords": [
        "ismareno",
        "weight-conversions"
    ],
    "homepage": "https://github.com/ismareno/weight-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "isma-reno",
            "email": "ismaelrenovell@edesignia.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "friendsofphp/php-cs-fixer": "^3.13",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Ismareno\\WeightConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ismareno\\WeightConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
